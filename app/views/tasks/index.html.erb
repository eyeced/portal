<div class="panel panel-default">
  <div class="panel-heading">Tasks</div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Assignee</th>
        <th>Actions</th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.user.name %></td>
          <td><%= link_to 'Show', task, class: "btn btn-default btn-sm" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-default btn-sm"  %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-info"  %>
