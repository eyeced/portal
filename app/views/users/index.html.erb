<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="panel panel-default" style="width: 500px;">
  <div class="panel-heading">Users</div>
  <ul class="list-group">
    <%- @users.each do |user| %>
      <li class="list-group-item"><%= user.name %><span class="pull-right">
        <%= link_to "Assign Task", new_task_path(user_id: user.id), class: "btn btn-primary btn-sm" if current.user.manager? %>
        <%= render  partial: 'links', locals: { user: user }%>
      </span>
      </li>
    <% end -%>
  </ul>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Locations</div>
    <div style='width: 1150px;'>
      <div id="map" style='width: 1120px; height: 400px;'></div>
    </div>
  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%= raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
